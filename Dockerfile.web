# ===== BUILDER =====
FROM node:18-alpine AS builder
WORKDIR /workspace

COPY package.json package-lock.json ./
RUN npm ci --legacy-peer-deps

COPY . .

# Generate Prisma Client (needed for NextAuth)
WORKDIR /workspace/apps/api
RUN npx prisma generate

# Build the Next.js frontend using Nx
WORKDIR /workspace
RUN npx nx build @workspace/workspace

# ===== RUNNER =====
FROM node:18-alpine AS runner
WORKDIR /app
ENV NODE_ENV=production

# Copy the Next.js build output (.next folder)
COPY --from=builder /workspace/apps/workspace/.next ./.next
COPY --from=builder /workspace/apps/workspace/public ./public
COPY --from=builder /workspace/apps/workspace/package.json ./package.json
COPY --from=builder /workspace/apps/workspace/next.config.js ./next.config.js

# Copy necessary node_modules
COPY --from=builder /workspace/node_modules ./node_modules

EXPOSE 3000
CMD ["npx", "next", "start"]
