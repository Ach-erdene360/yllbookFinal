# Environment Variables Template for Production (EKS)
# These are set in Kubernetes manifests, not in .env files

# Backend (backend-deployment.yaml)
NODE_ENV=production
PORT=4000
DATABASE_URL=<from kubernetes secret: yellowbooks-secrets>
NEXT_PUBLIC_SERVER_IP=backend-service

# Frontend (frontend-deployment.yaml)
NODE_ENV=production
PORT=3000
NEXT_PUBLIC_API_URL=https://yellowbooks.yourdomain.com

# Migration Job (migration-job.yaml)
DATABASE_URL=<from kubernetes secret: yellowbooks-secrets>
NODE_ENV=production

# Note: For local development, use .env files
# For production (EKS), these are set in the deployment manifests
